    <script>
        document.getElementById("userQuestion").addEventListener("input", async function() {
            const q = this.value.trim();
            const buttons = document.querySelectorAll(".card-btn");
            
            // Count drawn cards by checking if an image's src contains "/cards/"
            let drawnCount = 0;
            document.querySelectorAll(".card-container").forEach(container => {
                const img = container.querySelector("img");
                if (img && img.src.indexOf("/cards/") !== -1) {
                    drawnCount++;
                }
            });
    
            if (q === "") {
                // Disable card buttons when input is empty.
                buttons.forEach(btn => btn.setAttribute("disabled", true));
    
                // Reset session only when at least one card has been drawn.
                if (drawnCount > 0) {
                    const response = await fetch('/reset', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    if (response.ok) {
                        document.getElementById("userQuestion").value = "";
                        window.location.reload();
                    } else {
                        console.error('세션 초기화 실패');
                    }
                }
                return;
            } else {
                // When q is not empty, simply enable buttons if no card is drawn.
                if (drawnCount === 0) {
                    buttons.forEach(btn => btn.removeAttribute("disabled"));
                }
            }
            
            // Update the question in session state.
            await fetch('/set-question', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ question: q })
            });
        });
    </script>
    <script>

        // Intercept form submission for interpretation
        document.getElementById("interpretForm").addEventListener("submit", async function(e) {
            e.preventDefault();
            const container = document.getElementById("interpretation-container");
            container.style.display = "block";  // 컨테이너를 보이게 설정
            container.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border text-light" role="status"></div>
                    <p class="mt-3 loading-text">당신의 길을 찾는중입니다...</p>
                </div>
            `;
            
            const btn = document.getElementById("interpretBtn");
            btn.disabled = true;
            
            try {
                const question = document.getElementById("userQuestion").value.trim();
                const response = await fetch('/interpret', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    body: JSON.stringify({ question })
                });
                
                const data = await response.json();
                
                if (data.interpretation) {
                    container.innerHTML = `
                    <h2 class="text-center mb-4">✨ 타로 카드 해석</h2>
                    <div class="interpretation-text">
                        <p class="mb-3"><strong>질문:</strong> ${question}</p>
                        <p style="white-space: pre-line">${data.interpretation}</p>
                    </div>
                    <div class="text-center mt-4">
                        <button id="newQuestionBtn" class="interpret-btn">새로운 질문하기</button>
                    </div>
                `;
                // Add event listener for the reset button
                document.getElementById("newQuestionBtn").addEventListener("click", async function() {
                    // Call /reset to clear session values
                    await fetch('/reset', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    // Reload the page to start over
                    window.location.reload();
                });
                } else {
                    container.innerHTML = `
                        <div class="alert alert-danger">
                            죄송합니다. 타로 해석을 받아오지 못했습니다. 다시 시도해 주세요.
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-danger">
                        서버 오류가 발생했습니다. 잠시 후 다시 시도해 주세요.
                    </div>
                `;
            } finally {
                btn.disabled = false;
            }
        });


    </script>
